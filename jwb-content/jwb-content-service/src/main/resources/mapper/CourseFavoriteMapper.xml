<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwb.content.mapper.CourseFavoriteMapper">

    <resultMap id="BaseResultMap" type="com.jwb.content.model.po.CourseFavorite">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="courseId" column="course_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,course_id,
        create_time
    </sql>
    <select id="getCourseFavoriteList" resultType="com.jwb.content.model.po.CourseBase">
        select *
        from course_base
        where id in (select course_id from course_favorite where user_id = #{userId})
    </select>
</mapper>
